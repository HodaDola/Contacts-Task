@model ContactNumbers.Models.Contacts

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>





<div class="card" style="width:40%">
    <img src="~/image/img_avatar.png" alt="Avatar" style="width:100%">
    <div class="container">
        <h4><b>@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(model => model.Name)</b></h4>
        <p>@Html.DisplayNameFor(model => model.Phone) : @Html.DisplayFor(model => model.Phone)</p>
        <p>@Html.DisplayNameFor(model => model.Address) : @Html.DisplayFor(model => model.Address)</p>
        <p>@Html.DisplayNameFor(model => model.Notes) : @Html.DisplayFor(model => model.Notes)</p>
    </div>
</div>
<div class="mt-3">
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>